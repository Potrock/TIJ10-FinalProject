#pragma config(Sensor, in1,    leftEye,        sensorReflection)
#pragma config(Sensor, in2,    rightEye,       sensorReflection)
#pragma config(Sensor, dgtl1,  distance,       sensorSONAR_inch)
#pragma config(Motor,  port1,           rightDrive,    tmotorVex269_HBridge, openLoop)
#pragma config(Motor,  port5,           arm,           tmotorServoStandard, openLoop)
#pragma config(Motor,  port10,          leftDrive,     tmotorVex269_HBridge, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//
lefteye = SensorValue[lefteye];
righteye = SensorValue[righteye];
int difference;
task main()
{
	timesComplete = 0;
	while(timesComplete < 8) {
	findlight();
	return();
	timesComplete++;
}
}

task findLight() {
wait1Msec(1000);

motor[leftDrive] = -60;
motor[rightDrive] = 60;

while(lefteye > 200) {};

motor[leftDrive] = 0;
motor[rightDrive] = 0;

while(righteye > 25) {
	difference = righteye - lefteye;
	
	if(difference > 0) {
		motor[leftDrive] = -60;
		motor[rightDrive] = 60;
	}
	
	if(difference < 0) {
		motor[leftDrive] = 60;
		motor[rightDrive] = -60;
	}
	
	if(diference == 0) {
		motor[leftDrive] = 60;
		motor[rightDrive] = 60;
	}
}
 while(SensorValue[distance] = 5) {
   motor[leftDrive] = 0;
   motor[rightDrive] = 0;
   motor[arm] = 63;
 }
 task return() {
   motor[leftDrive] = -60;
   motor[rightDrive] = -60;
   wait1Msec(4000);
 }
 }
